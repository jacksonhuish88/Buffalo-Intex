@{
    ViewData["Title"] = "Burial Summary";
}

@model List<Burialmain>

<div class="text-center">
    <h1 class="display-4">Burial Summary Page</h1>
    <p>Below is information that has been recorded in BYU's Egyptian Archeology journals</p>
</div>

@foreach (Burialmain bm in Model)
{
    <h5>@bm.Id</h5>
    <ul>
        <li>@bm.Sex</li>
        <li>@bm.Depth</li>
    </ul>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Burial ID</td>
            <td>Sex</td>
            <td>Burial Depth</td>
            <td>Age at Death</td>
            <td>Head Direction</td>
            <td>Hair Color</td>
            <td>Preservation</td>
            <td>Goods</td>
            <td>Text</td>
            <td>Photos</td>
        </tr>
    </thead>

</table>

