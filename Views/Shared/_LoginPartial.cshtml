@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item text-right mynav-link">
            <a class="nav-link mynav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color:gold">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item text-right mynav-link">@*  *@
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link mynav-link" style="color:gold">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item text-right">
            <a class="nav-link text-dark mynav-link" asp-area="Identity" asp-page="/Account/Register"><span class="mynav-link-account">Register</span></a>
        </li>
        <li class="nav-item text-right">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><span class="mynav-link-account">Login</span></a>
        </li>
    }
</ul>
