
@{
}

@model Burialmain

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            @Model.Id
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Sex</small>
            </span>
        </h4>
    </div>

    <ul>
        <li class="card-text p-1">Depth: @Model.Depth</li>
        <li class="card-text p-1">Length: @Model.Length</li>
        <li class="card-text p-1">Hair Color: @Model.Haircolor</li>
    </ul>


    <form style="border:none" method="post" asp-page="/Order">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span>
            <button type="submit" class="btn btn-success btn-sm float-left">Add to Basket</button>
        </span>
    </form>
</div>